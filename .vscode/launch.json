    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in library 'bevy'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--lib",
                    "--package=bevy"
                ],
                "filter": {
                    "name": "bevy",
                    "kind": "lib"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Build and launch example",
            "cargo": {
                "args": [
                    "build",
                    "--example=simple_new",
                    "--package=bevy"
                ],
                "filter": {
                    "name": "simple_new",
                    "kind": "example"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Launch example",
            "cargo": {
                "args": [
                    "run",
                    "--example=simple_new",
                    "--package=bevy",
                    "--release"
                ],
                "filter": {
                    "name": "simple_new",
                    "kind": "example"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ]
}